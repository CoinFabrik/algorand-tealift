    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run print.ts",
            "runtimeExecutable": "node",
            "runtimeArgs": ["-r", "ts-node/register/transpile-only"],
            "args": ["src/print.ts", "${file}"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}